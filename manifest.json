{
  "name": "AniGamer Hide Disliked Images",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Automatically hide disliked images on AniGamer",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ani.gamer.com.tw/animeList.php*",
        "https://ani.gamer.com.tw/search.php*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_title": "哈哈是我啦"
  }
}
